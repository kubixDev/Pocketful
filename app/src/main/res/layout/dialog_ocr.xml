<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:padding="@dimen/_20sdp"
    android:gravity="center">

    <!-- PILL ICON -->
    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/rounded_background"
        android:backgroundTint="?attr/colorSecondaryVariant">
    </View>


    <!-- INFO CARD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:gravity="center_vertical"
        android:padding="@dimen/_15sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_info"
            app:tint="?attr/colorSecondary">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="?attr/colorOnPrimary"
            android:includeFontPadding="false"
            android:text="To ensure best results, take the photo close up, in good lighting conditions. This feature uses OCR and may occasionally make mistakes.">
        </TextView>
    </LinearLayout>


    <!-- ACTION BUTTONS LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCaptureImage"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:text="Capture new"
            android:drawableTop="@drawable/ic_camera"
            android:padding="@dimen/_18sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableTint="?attr/colorOnPrimary"
            android:includeFontPadding="false"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_12sdp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:stateListAnimator="@null">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSelectImage"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:text="Select image"
            android:drawableTop="@drawable/ic_gallery"
            android:padding="@dimen/_18sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableTint="?attr/colorOnPrimary"
            android:includeFontPadding="false"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_12sdp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:stateListAnimator="@null">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>
</LinearLayout>