<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Pocketful" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Background color -->
        <item name="colorPrimary">@color/dark_blue</item>

        <!-- Accent color -->
        <item name="colorPrimaryVariant">@color/dark_blue_accent</item>

        <!-- Basic font color -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Contrasting grey -->
        <item name="colorSecondary">@color/light_grey</item>

        <!-- Text field color -->
        <item name="colorSecondaryVariant">@color/dark_grey</item>

        <!-- Theme color -->
        <item name="colorOnSecondary">@color/purple</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
</resources>